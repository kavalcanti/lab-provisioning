#!/bin/bash
# Secrets Configuration - EXAMPLE FILE
# Copy this file to secrets.env and fill in your actual values
# secrets.env is gitignored and will not be committed

# ==============================================================================
# PROXMOX CONNECTION
# ==============================================================================
export TF_VAR_proxmox_endpoint="https://homedev:8006/"
export TF_VAR_proxmox_node="homedev"
export TF_VAR_proxmox_node_ip="172.20.0.120"
export TF_VAR_proxmox_ssh_user="root"

# ==============================================================================
# PROXMOX API CREDENTIALS
# ==============================================================================
# Create an API token in Proxmox:
# Datacenter > Permissions > API Tokens > Add
# Format: username@realm!tokenid=secret
export TF_VAR_proxmox_api_token="terraform@pam!terraform=your-api-token-here"

# ==============================================================================
# VM PASSWORDS
# ==============================================================================
# Initial root password for VM (set via cloud-init)
export TF_VAR_root_password="change-me-root-password"

# ==============================================================================
# SSH KEYS
# ==============================================================================
# Public SSH key to add to the VM (optional, for key-based auth)
export TF_VAR_ssh_public_key=""

# To generate an SSH key:
# ssh-keygen -t ed25519 -f ~/.ssh/ansible_keys/your-vm-name -C "ansible@your-vm"
# Then: export TF_VAR_ssh_public_key="$(cat ~/.ssh/ansible_keys/your-vm-name.pub)"

# ==============================================================================
# ANSIBLE VAULT PASSWORD (optional)
# ==============================================================================
# If you want to avoid typing the vault password interactively
# export ANSIBLE_VAULT_PASSWORD="your-vault-password"
# OR set ANSIBLE_VAULT_PASSWORD_FILE to a file containing the password
# export ANSIBLE_VAULT_PASSWORD_FILE="${CONFIG_DIR}/.vault_pass"
